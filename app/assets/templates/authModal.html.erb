<tabset justified="true" top="-100px">
  <tab heading="Login">
    <div class="modal-header">
      <h3 class="modal-title">Login</h3>
    </div>
    <div class="modal-body">
      <form ng-submit="login()">
        <div class="form-group">
          <label>Email</label>
          <input type="text" class="form-control" ng-model="loginData.email" required>
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" ng-model="loginData.password" required>
        </div>
          <input type="submit" class="btn btn-default" value="Login">
      </form>
      </div>
    </div>
  </tab>
  <tab heading="Signup">
    <div class="modal-header">
      <h3 class="modal-title">Signup</h3>
    </div>
    <div class="modal-body">
      <form ng-submit="signup()">
<!--         <div class="form-group">
          <label>First Name</label>
          <input type="text" class="form-control" ng-model="firstName" required>
        </div>
        <div class="form-group">
          <label>Last Name</label>
          <input type="text" class="form-control" ng-model="lastName" required>
        </div> -->
        <div class="form-group">
          <label>Enter Email</label>
          <input type="text" class="form-control" ng-model="signupEmail" required>
        </div>
        <div class="form-group">
          <label>Choose Password</label>
          <input type="password" class="form-control" ng-model="signupPassword" required>
        </div>
<!--        <div class="form-group">
          <label>Confirm Password</label>
          <input type="password" class="form-control" ng-model="signupPasswordConfirmation" required>
        </div> -->
          <input type="submit" class="btn btn-default" value="Signup">
      </form>
      </div>
    </div>
  </tab>
</tabset>
