<tabset justified="true" top="-100px">
  <tab heading="Login">
    <div class="modal-header">
      <h3 class="modal-title">Login</h3>
    </div>
    <div class="modal-body">
      <form ng-submit="login()">
        <div class="form-group">
          <input type="text" placeholder="Email" class="form-control" ng-model="loginData.email" required>
        </div>
        <div class="form-group">
          <input type="password" placeholder="Password" class="form-control" ng-model="loginData.password" required>
        </div>
          <input type="submit" class="btn btn-default" value="Login">
      </form>
      </div>
    </div>
  </tab>
  <tab heading="Signup">
    <div class="modal-header">
      <h3 class="modal-title">Signup</h3>
    </div>
    <div class="modal-body">
      <form ng-submit="signup()">
        <div class="form-group">
          <input type="text" placeholder="Enter Email" class="form-control" ng-model="signupEmail" required>
        </div>
        <div class="form-group">
          <input type="password" placeholder="Choose Password" class="form-control" ng-model="signupPassword" required>
        </div>
          <input type="submit" class="btn btn-default" value="Signup">
      </form>
      </div>
    </div>
  </tab>
</tabset>
