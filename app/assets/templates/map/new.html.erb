<header></header>
<br><br><br>

<div ng-controller="MapNewCtrl">
  <div class="container col-md-7 col-sm-7 col-xs-12">

    <div class="container col-md-12 col-sm-12 col-xs-12">
      <h2>New Map
        <input type="submit" ng-click="saveMap()" class="btn btn-default pull-right" value="Save Map">
      </h2>
      <form class="form" ng-submit="placeMarker()">
        <div class="form-group input-group">
          <input type="text" ng-model="selected" placeholder="Please enter a location" typeahead="address as address['name'] + ' â€” ' + address['location']['formattedAddress'] for address in getLocation($viewValue) | filter:$viewValue | limitTo:8" typeahead-loading="loadingLocations" typeahead-min-length="3" class="form-control">
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i ng-show="loadingLocations" class="glyphicon glyphicon-refresh"></i>
              <span ng-hide="loadingLocations">  Go!</span>
            </button>
          </span>
        </div>
      </form>

      <br><br>

      <div>
        <ul class="map-list" ng-repeat="marker in markers">
          <li><img src="{{marker.icon.iconUrl}}">&nbsp;&nbsp;{{marker.label.message}}</li>
        </ul>
      </div>

    </div>

    <div class="container-fluid col-md-5 col-sm-6 leaflet-map">
      <leaflet defaults="defaults" center="center" markers="markers" event-broadcast="events" height="100vh" width="100%"></leaflet>
    </div>
  </div>
</div>
