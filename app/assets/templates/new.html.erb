<header></header>

<div class="container col-md-5">
  <input type="submit" ng-click="saveMap()" class="btn btn-default pull-right" value="Save Map"></input>
  <h2>New Map</h2>
  <form class="form" ng-submit="placeMarker()">
    <div class="form-group">

      <input type="text" ng-model="selected" placeholder="Please enter a location" typeahead="address as address['name'] + ' â€” ' + address['location']['formattedAddress'] for address in getLocation($viewValue)" typeahead-loading="loadingLocations" typeahead-min-length="3" class="form-control">
    </div>
    <i ng-show="loadingLocations" class="glyphicon glyphicon-refresh"></i>
    <input ng-hide="loadingLocations" type="submit" class="btn btn-default" name="Search"></input>
  </form>

  <div ng-repeat="marker in markers">
    <li>{{marker.venue}}</li>
  </div>

</div>

<div class="container-fluid leaflet-map">
  <leaflet defaults="defaults" center="center" markers="markers" event-broadcast="events" height="100vh" width="100%"></leaflet>
</div>
