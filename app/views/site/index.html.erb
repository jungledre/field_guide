<div class="container">

  <h2>Foursquare Results</h2>
<form class="form" ng-submit="placeMarker()">
<div class="form-group">


  <input type="text" ng-model="selected" placeholder="Please enter a location"
         typeahead="address as address['name'] + ' â€” ' + address['location']['formattedAddress'] for address in getLocation($viewValue)"
         typeahead-loading="loadingLocations" typeahead-min-length="3" class="form-control">
</div>
  <i ng-show="loadingLocations" class="glyphicon glyphicon-refresh"></i>

  <input ng-hide="loadingLocations" type="submit" class="btn btn-default" name="Search"></input>

</form>


<%= @venue_names %>

<br><br>





</div>

<div class="container-fluid">
<leaflet defaults="defaults" center="center" markers="markers" event-broadcast="events" height="70vh" width="100%">
</leaflet>

</div>


